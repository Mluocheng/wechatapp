.container {
  background-color: #1975ff;
}

.container {
  position: fixed;
  top: 0;
  width: 100%;
}

.container .titileimg {
  height: 44px;
  width: 100%;
  position: relative;
  vertical-align: middle;
}

.header {
  width: 100%;
  height: 44px;
  display: flex;
  justify-content: space-between;
  flex-direction: row;
  align-items: center;
  z-index: 999;
  position: absolute;
  top: 0;
}

.header .title image {
  width: 90px;
  height: 25px;
  vertical-align: middle;
  margin-left: 10px;
}

page {
  display: block;
  height: 100%;
  background-color: rgb(243, 243, 243);
  
}
.pagecon{
  height: 100%;
overflow-y: hidden;
}

/*  */

.topboxbg {
  position: relative;
  width: 100%;
  padding: auto 10px;
}

.topbox {
  color: #fff;
  position: absolute;
  top: 0;
  z-index: 999;
  padding-right: 10px;
  display: flex;
  justify-content: center;
  flex-direction: column;
  width: 100%;
}

.topbox .tbtitle {
  margin: 10px auto;
}

.topbox .search {
  margin: 10px auto;
  width:90%;
  border-radius: 5px;
  height: 42px;
  background: rgba(255, 255, 255, 0.8);
  display: flex;
  align-items: center;
  margin-top:40px;
}
.topbox .search icon{height: 18px;width: 18px;display: inline-block;margin: auto 15px;}
.topbox .search image{width: 3px;height: 20px;margin-right: 15px;}
.topbox .search input{width: 80%;display: inline-block;height: 100%;}
.topbox .search .centerplaceholder{font-size: 18px;color: rgb(170, 170, 170)}
.topbox .example {
  margin: 10px auto;
  font-size: 22rpx;
  width:90%;
}

.btombox {
  margin-top: 20px;
  font-size: 32rpx;
}
.btombox .btomlist{
  position: relative;
  width: 100%;
  height: 100px;
}
.btombox .btomlistimg{
  position: absolute;
  top: 0;
   width: 100%;
  height: 100px;
  z-index: 99;
}
.btombox .btomlist .btomlistbody{
  position: absolute;
  top: 0;
  padding: 5px 20px;
  display: flex;
  z-index: 999;
}
.btombox .btolisticon image{
  width: 25px;
  height: 25px;
  margin: 10px;
}
.btombox .btolistcontent{
  display: flex;
  flex-direction: column;
}
.btombox .btolistcontent>view{
  margin-top: 10px;
}
.btombox .btolistcontent .bgholder{
  font-size: 28rpx;
  color: #bfbfbf;
}