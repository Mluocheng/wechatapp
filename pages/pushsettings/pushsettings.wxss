.container, .header {
  background-color: #2196f3;
}

.container {
  position: fixed;
  top: 0;
  width: 100%;
}

.header {
  width: 100%;
  height: 80rpx;
  display: flex;
  justify-content: flex-start;
  flex-direction: row;
  align-items: center;
}

.header button {
  font-size: 32rpx;
  height: 80rpx;
  display: inline-block;
  line-height: 80rpx;
  background-color: transparent;
  border-color: #2196f3;
  color: #fff;
}
.hoverbtnsty{
  color: rgb(182, 182, 182)
}

.lf {
  float: left;
}

.rf {
  float: right;
}

.clear {
  clear: both;
}

.box {
  width: 95%;
  margin: 40rpx auto;
}

.box form {
  font-size: 32rpx;
}

.box .formgroup {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 40rpx auto;
}

.box form input {
  border: 1px solid #bbb;
  border-radius: 10rpx;
  width: 70%;
  margin-left: 40rpx;
}

.box button {
  width: 35%;
  background-color: #377dff;
  border-radius: 10rpx;
  font-size: 16px;
  font-weight: 800;
  color: #fff;
  margin-top: 100px;
}
.placesty{
  color: rgb(212, 212, 212);
  font-size: 12px;
}
