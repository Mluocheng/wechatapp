/* pages/signin/signin.wxss */
.signinbox{
  width: 95%;
  margin: 20px auto;
}
.signlogin{
  width: 100%;
  height: 300px;
  border: 1px solid #000;
  background-color: #2196f3;
  position: relative; 
  border-radius:10px; 
  color: #fff;
}
.signlogin .headerigm{
position: absolute;
top: -20px;
left: 20px;
font-size: 16px;
}
.signlogin .imgname{
  width: 70px;
  height: 70px;
  border: 1px solid #000;
  border-radius: 50%;
  display: inline-block
}
.signlogin image{
  width:100%;
  height: 100%;
 border-radius: 50%;
}
.signlogin .buttonbox{
  width: 100%;
  display: flex;
  flex-direction:row;
  justify-content: space-around;
  position: absolute;
  bottom: 10%;
}
.signlogin .buttonbox button{
  font-size: 14px;
  color: #fff;
  border: 1px solid #000;
  background-color: #faae3d;
  border-radius: 5px;
  width: 100px;
}

