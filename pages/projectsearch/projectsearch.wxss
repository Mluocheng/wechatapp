.box {
  width: 95%;
  margin: 20rpx auto;
  font-size: 28rpx;
}

.lf {
  float: left;
}

.rf {
  float: right;
}

.clearfloat {
  clear: both;
}

.container, .header {
  background-color: #2196f3;
}

.container {
  position: fixed;
  top: 0;
  width: 100%;
}

.header {
  width: 100%;
  height: 80rpx;
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
  background-color: #2196f3;
}

.header button {
  font-size: 21rpx;
  height: 80rpx;
  display: inline-block;
  line-height: 80rpx;
  background-color: transparent;
  border-color: #2196f3;
  color: #fff;
}
.hoverbtnsty{
  color: rgb(182, 182, 182)
}
.title {
  font-size: 24rpx;
  color: #38f;
  font-weight: 700;
}

.title .titlekeyword {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  font-size: 24rpx;
  color: #38f;
}

.title .titlekeyword .bon {
  width: 80rpx;
  text-align: center;
  border-radius: 20rpx;
  margin-left: 20rpx;
  background-color: #38f;
  color: #fff;
}

.title .search {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
}

.title .search input {
  border: 1px solid #bfbfbf;
  width: 50%;
  border-radius: 20rpx;
  display: inline-block;
}

.title .search icon {
  display: inline-block;
}

.title .placeholdersty {
  text-align: center;
  font-size: 20rpx;
}

.section .flex-item {
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  margin-bottom: 20rpx;
}

.section .itmeandmoney {
  margin: 10rpx auto;
}

.section .requirement {
  color: #38f;
}

.section .flex-item>view {
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.section .requirement text {
  color: #fff;
  display: inline-block;
  background-color: #38f;
  width: 140rpx;
  border-radius: 60rpx;
  text-align: center;
  margin-right: 20rpx;
}

.section .item_conter, .section .requirement text {
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.section .item_conter {
  color: #a7a7a7;
}

.bgcolor {
  background-color: #e4e4e4;
}

.timemoneycolcor {
  color: #ff9800;
}
